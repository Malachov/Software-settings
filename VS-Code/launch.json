  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "internalConsole",
      "justMyCode": false
    },
    {
      "name": "Python: As module",
      "type": "python",
      "request": "launch",
      "module": "${relativeFileDirname}.${fileBasenameNoExtension}", // If submodule, use "${relativeFileDirname}.MYSUBMODULE.${fileBasenameNoExtension}"
      "console": "internalConsole"
      //   "justMyCode": false // Not working here
    }
    //// If uncomment `"justMyCode": false` works, but cannot be restarted
